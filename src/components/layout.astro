---
interface Props {
	title: string
	description?: string
}
const { title } = Astro.props
import "@fontsource-variable/ibm-plex-sans"
import "@fontsource/ibm-plex-mono"
import "@fontsource/ibm-plex-serif"
import "../styles/base.css"
import Nav from "./nav.astro"
const description =
	Astro.props.description ??
	"Mukul Agarwal's personal website. A place to share my thoughts, projects, and more."
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Mukul Agarwal" />
		<meta name="description" content={description} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<script
			is:inline
			defer
			src="/yum.js"
			data-website-id="d2aed3db-cae9-460d-ba9e-64c71cd88381"></script>
		<title>{title}</title>
	</head>
	<body class="bg-white h-screen w-full overflow-auto">
		<Nav />
		<div role="main" class="flex flex-col bg-inherit w-full sticky top-0">
			<div
				class="flex flex-col bg-inherit px-5 pb-7 md:pb-10 sticky top-0"
			>
				<slot />
			</div>
		</div>
	</body>
</html>
