---
interface Props {
	title: string
}
const { title } = Astro.props
const currentPath = Astro.url.pathname.trim()

import Layout from "./layout.astro"
import { Image } from "astro:assets"
import hammer_gif from "../images/hammer.gif"
---

<Layout title=`${title}: under construction`>
	<div class="flex flex-col h-full">
		<div class="flex flex-col text-base items-center justify-center h-full">
			<Image
				src={hammer_gif}
				class="object-center max-w-52 sm:max-w-72 md:max-w-80 lg:max-w-96"
				alt="A penguin wearing a yellow hard hat is laying bricks onto a wall. Above, there is a text caption stating 'Let's Build!'."
			/>
			<p class="text-2xl sm:text-4xl md:text-6xl text-indigo-800 text-center">
				this page is currently under construction!
			</p>
			<p
				class="text-lg sm:text-xl md:text-2xl mx-auto my-2 sm:my-3 md:my-3 lg:my-4 text-slate-800 text-center"
			>
				<slot />
			</p>
			<p
				class="text-base sm:text-xl md:text-2xl lg:text-4xl text-indigo-800 text-center pt-5 md:pt-10"
			>
				you are at: <a href={currentPath} class="hover:text-slate-400 underline"
					>{currentPath}</a
				>
			</p>
			<p
				class="text-base sm:text-xl md:text-2xl lg:text-4xl text-indigo-800 text-center pt-2 md:pt-4"
			>
				<a href="/" class="hover:text-slate-400 underline">go home!</a>
			</p>
		</div>
	</div>
</Layout>
