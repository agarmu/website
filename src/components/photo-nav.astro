---
interface Props {
	id: number
	minId: number
	maxId: number
}
const { id, minId, maxId } = Astro.props
---

{
	id == minId || id == maxId ? (
		<div class="grid grid-cols-1 w-full items-center">
			{id != minId && (
				<div class="text-center">
					<a
						class="text-slate-700 font-bold hover:underline hover:text-slate-500"
						href={`/photos/${id - 1}`}
					>
						&larr; Prev
					</a>
				</div>
			)}
			{id != maxId && (
				<div class="text-center text-slate700 font-bold hover:underline hover:text-slate-500">
					<a class="underline" href={`/photos/${id + 1}`}>
						Next &rarr;
					</a>
				</div>
			)}
		</div>
	) : (
		<div class="grid grid-cols-2 w-full sm:w-1/2 text-xs md:text-sm">
			<div class="text-center text-slate-700 font-bold hover:underline hover:text-slate-500">
				<a
					class="text-slate-700 font-bold hover:underline hover:text-slate-500"
					href={`/photos/${id - 1}`}
				>
					&larr; Prev
				</a>
			</div>
			<div class="text-center text-slate-700 font-bold hover:underline hover:text-slate-500">
				<a class="" href={`/photos/${id + 1}`}>
					Next &rarr;
				</a>
			</div>
		</div>
	)
}
