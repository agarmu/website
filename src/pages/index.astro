---
import Heading from "../components/heading.astro"
import Layout from "../components/layout.astro"

import Logo from "../components/logo.astro"
import githubInv from "../images/github-logo-inv.svg"
import github from "../images/github-logo.svg"
import linkedinInv from "../images/linkedin-logo-inv.svg"
import linkedin from "../images/linkedin-logo.svg"
import resumeInv from "../images/resume-inv.svg"
import resume from "../images/resume.svg"
---

<Layout title="mukul's personal website">
	<div
		id="homepage-container"
		class="flex flex-col md:flex-row justify-center items-center"
	>
		<div
			class="px-1 sm:px-10 bg-inherit flex flex-col items-center justify-center"
		>
			<Heading id="name-heading">Mukul Agarwal</Heading>
			<div class="flex flex-col items-center justify-center">
				<div class="flex flex-col items-center justify-center py-2">
					<p class="py-1 font-sans">CS & Math at Purdue University</p>
					<p class="font-mono break-inside-avoid">
						agarw396@purdue.edu
					</p>
				</div>
				<div class="flex flex-row justify-center items-center">
					<Logo
						src={github}
						alt={githubInv}
						desc="GitHub Link"
						url="https://github.com/agarmu"
					/>
					<Logo
						src={linkedin}
						alt={linkedinInv}
						desc="LinkedIn Link"
						url="https://www.linkedin.com/in/agarmu/"
					/>
					<Logo
						src={resume}
						alt={resumeInv}
						desc="Résumé Link"
						url="https://cs.purdue.edu/homes/agarw396/resume.pdf"
					/>
				</div>
			</div>
			<div
				class="text-slate-800 text-sm md:text-base lg:text-lg font-sans"
				id="pers-description-div"
			>
				<p class="py-2">
					Hello! I'm Mukul Agarwal, an undergraduate studying Computer
					Science and Mathematics at Purdue University. I'm interested
					in learning more about cryptography and algorithms. I am
					currently an undergraduate research assistant working with
					<a
						href="https://www.cs.purdue.edu/homes/hmaji/"
						class="underline font-semibold hover:text-slate-700"
						>Prof. Hemanta K. Maji</a
					>
					on cryptography.
				</p>
				<p class="py-2">
					During Summer 2025, I am fortunate to be a recipient of
					Purdue's <a
						href="https://engineering.purdue.edu/Engr/Research/EURO/students/about-SURF"
						class="underline font-semibold hover:text-slate-700"
						>Summer Undergraduate Research Fellowship (SURF)</a
					>. Also during Summer 2025, I am helping organize a <a
						href="https://theory.agarmu.com"
						class="underline font-semibold hover:text-slate-700"
						>Theoretical CS Reading Group</a
					> at Purdue for advanced undergraduates/graduate students — do
					check it out if interested!
				</p>
				<p class="py-2">
					I sometimes write about projects and ideas, which you can
					find at <a
						href="/posts"
						class="underline font-semibold hover:text-slate-700 break-inside-avoid"
						>/posts</a
					>. I also photography as a hobby; you can see some of my
					favorite shots at
					<a
						href="/photos"
						class="underline font-semibold hover:text-slate-700 break-inside-avoid"
						>/photos</a
					>.
				</p>
			</div>
		</div>
	</div>
	<script>
		const fix_size = (_ignored: Event) => {
			let head = document.getElementById("name-heading")!
			let tail = document.getElementById("pers-description-div")!
			let container = document.getElementById("homepage-container")!
			let newWidth = Math.min(
				head.clientWidth * 1.2,
				container.clientWidth * 0.8,
			).toPrecision(2)
			tail.style.width = `${newWidth}px`
		}
		addEventListener("resize", fix_size)
		addEventListener("load", fix_size)
	</script>
</Layout>
