---
import Layout from "../components/layout.astro"
import { Image } from "astro:assets"
import Heading from "../components/heading.astro"

import headshot from "../images/headshot.jpg"
import github from "../images/github-logo.svg"
import githubInv from "../images/github-logo-inv.svg"
import linkedin from "../images/linkedin-logo.svg"
import linkedinInv from "../images/linkedin-logo-inv.svg"
import Logo from "../components/logo.astro"
---

<Layout title="mukul's personal website">
	<div class="flex flex-col md:flex-row justify-center items-center">
		<div class="flex flex-col justify-center items-center">
			<Image
				src={headshot}
				alt="An image of Mukul Agarwal."
				class="rounded-full border-2 md:border-4 max-w-44 sm:max-w-60 md:max-w-72 border-indigo-800"
			/>
			<div class="flex flex-row justify-center items-center pt-5">
				<Logo
					src={github}
					alt={githubInv}
					desc="GitHub Link"
					url="https://github.com/agarmu"
				/>
				<Logo
					src={linkedin}
					alt={linkedinInv}
					desc="LinkedIn Link"
					url="https://www.linkedin.com/in/agarmu/"
				/>
			</div>
		</div>
		<div
			class="px-1 sm:px-10 bg-inherit flex flex-col items-center justify-center"
		>
			<Heading id="name-heading">Mukul Agarwal</Heading>
			<div
				class="text-indigo-800 text-sm md:text-base lg:text-lg"
				id="pers-description-div"
			>
				<p class="py-2">
					Hello! I'm Mukul Agarwal, an undergraduate studying Computer Science
					and Mathematics at Purdue University in West Lafayette, Indiana. I'm
					interested in learning more about
					<span class="italic"
						>Programming Languages and Quantum Computing!</span
					>
				</p>
				<p class="py-2">
					I also sometimes write about projects and ideas, which you can find at <a
						href="/posts"
						class="underline font-semibold hover:text-slate-700">/posts</a
					>. Please feel free to reach out to me anytime if you'd like to chat
					at
					<span class="underline">hello [at] agarmu [dot] com</span>!
				</p>
				<p class="py-2">
					I enjoy photography as a hobby; you can see some of my favorite shots
					at
					<a href="/photos" class="underline font-semibold hover:text-slate-700"
						>/photos</a
					>.
				</p>
			</div>
		</div>
	</div>
	<script>
		const fix_size = (_ignored: Event) => {
			let head = document.getElementById("name-heading")!
			let tail = document.getElementById("pers-description-div")!
			tail.style.width = `${head.clientWidth}px`
		}
		addEventListener("resize", fix_size)
		addEventListener("load", fix_size)
	</script>
</Layout>
