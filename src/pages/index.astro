---
import Layout from "../components/layout.astro";
import { Image } from "astro:assets";
import headshot from "../images/headshot.jpg";
import Heading from "../components/heading.astro";
---

<Layout title="mukul's personal website">
    <div class="flex flex-col md:flex-row justify-center items-center">
        <Image
            src={headshot}
            alt="An image of Mukul Agarwal."
            class="rounded-full border-4 border-purple-800 max-w-44 sm:max-w-60 md:max-w-72 "
        />
        <div class="px-1 sm:px-10 bg-inherit">
            <Heading id="name-heading">Mukul Agarwal</Heading>
            <div class="text-indigo-800 text-sm md:text-base lg:text-lg" id="pers-description-div">
                <p class="p-3">
                    Hello! I'm Mukul Agarwal, an undergraduate studying <span
                        class="font-semibold italic"
                        >Computer Science and Mathematics</span
                    > at Purdue University in West Lafayette, Indiana! I'm interested
                    in learning more about
                    <span class="italic"
                        >Programming Languages and Quantum
                        Computing!</span
                    >
                </p>
                <p class="p-2">
                    I also sometimes write <a
                        href="/posts"
                        class="underline hover:text-slate-700"
                        >about projects I work on and random thoughts</a
                    >. Please feel free to reach out to me anytime if you'd like
                    to chat at
                    <span class="underline">hello [at] agarmu [dot] com</span>!
                </p>
                <p class="p-2">  
                    One of the hobbies I most enjoy is nature/landscape photography! I'm currently working on getting some
                    of my favorite shots uploaded to this website.
                </p>
            </div>
        </div>
    </div>
    <script>
        const fix_size = (_ignored: Event) => {
            let head = document.getElementById("name-heading")!;
            let tail = document.getElementById("pers-description-div")!;
            tail.style.width = `${head.clientWidth}px`;
        }
        addEventListener("resize", fix_size);
        addEventListener("load", fix_size);
    </script>
</Layout>
